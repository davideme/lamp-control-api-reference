# Storage Backend Configuration
# Set to true to use PostgreSQL, false to use in-memory storage
USE_POSTGRES=false

# PostgreSQL Connection Settings
# Option 1: Provide full connection URL
DATABASE_URL=postgresql+asyncpg://lamp_user:lamp_password@localhost:5432/lamp_control

# Option 2: Provide individual connection parameters
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=lamp_control
# DB_USER=lamp_user
# DB_PASSWORD=lamp_password

# Connection Pool Settings
DB_POOL_MIN_SIZE=5
DB_POOL_MAX_SIZE=20
