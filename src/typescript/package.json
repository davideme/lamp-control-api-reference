{
  "name": "lamp-control-api",
  "version": "1.0.0",
  "description": "TypeScript implementation of the Lamp Control API with REST",
  "type": "module",
  "engines": {
    "node": ">=22.x",
    "npm": ">=10.x"
  },
  "scripts": {
    "generate-types": "openapi-typescript ../../docs/api/openapi.yaml -o ./src/infrastructure/types/api.ts",
    "build": "tsc",
    "clean": "rm -rf dist",
    "dev": "tsx src/index.ts",
    "dev:native": "node --experimental-strip-types src/index.ts",
    "start": "node dist/index.js",
    "start:native": "node --experimental-strip-types src/index.ts",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.3",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "fastify": "^5.3.2",
    "fastify-openapi-glue": "^3.1.0",
    "jest": "^29.7.0",
    "openapi-typescript": "^7.6.1",
    "openapi-typescript-codegen": "^0.29.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.3.2",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3"
  }
}
